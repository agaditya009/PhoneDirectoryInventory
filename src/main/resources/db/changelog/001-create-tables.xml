<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="aditya">
        <createTable tableName="telephone_numbers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number" type="VARCHAR(32)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="country_code" type="VARCHAR(8)"/>
            <column name="area_code" type="VARCHAR(8)"/>
            <column name="status" type="VARCHAR(16)" defaultValue="AVAILABLE"/>
            <column name="allocated_user_id" type="VARCHAR(64)"/>
            <column name="reserved_until" type="TIMESTAMP"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="aditya">
        <createTable tableName="audit_logs">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="number_id" type="BIGINT"/>
            <column name="from_state" type="VARCHAR(16)" />
            <column name="to_state" type="VARCHAR(16)" />
            <column name="user_id" type="VARCHAR(64)" />
            <column name="timestamp" type="TIMESTAMP"/>
            <column name="note" type="VARCHAR(128)" />
        </createTable>
    </changeSet>

</databaseChangeLog>
